    <!--Login button-->
    <Style TargetType="{x:Type Button}" x:Key="LoginButton">
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="{StaticResource DarkGreenBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VeryLightGreenBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource LatoBold}" />
        <Setter Property="Template">
