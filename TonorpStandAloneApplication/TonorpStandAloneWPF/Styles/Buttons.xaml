                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Icon Button with Corner radius-->
    <Style TargetType="{x:Type Button}" x:Key="IconButtonCornered" BasedOn="{StaticResource SearchButton}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="btnBorder" 
                            Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="5"
                            BorderThickness="1"
                            BorderBrush="Transparent">

                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--Button Hover color change animation-->
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource OffWhiteLight}" Duration="0:0:0.2"
                                                    Storyboard.TargetProperty="Background.Color" />
                                    <ColorAnimation To="{StaticResource DarkGreen}" Duration="0:0:0.2"
                                                    Storyboard.TargetName="btnBorder"
                                                    Storyboard.TargetProperty="BorderBrush.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="Transparent" Duration="0:0:0.2"
                                                    Storyboard.TargetProperty="Background.Color" />
                                    <ColorAnimation To="Transparent" Duration="0:0:0.2"
                                                    Storyboard.TargetName="btnBorder"
                                                    Storyboard.TargetProperty="BorderBrush.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!--End of Button Hover color change animation-->

                        <!--Button pressed Trigger-->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource LightGray}" />
                            <Setter Property="BorderBrush" Value="{StaticResource GreenGrayBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Landing page Button-->
    <Style TargetType="{x:Type Button}" x:Key="SquareButton">
        <Setter Property="Background" Value="{StaticResource SoftOffWhiteBrush}"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">

                    <Border x:Name="borderSquare" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="5" 
                            BorderBrush="{StaticResource GreenBrush}"
                            BorderThickness="1">
                        <ContentPresenter x:Name="ContentPresenter"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--Button Hover color change animation-->
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation To="3" Duration="0:0:0.3"
                                                    Storyboard.TargetName="borderSquare"
                                                    Storyboard.TargetProperty="BorderThickness" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation To="1" Duration="0:0:0.3"
                                                    Storyboard.TargetName="borderSquare"
                                                    Storyboard.TargetProperty="BorderThickness" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!--End of Button Hover color change animation-->

                        <!--Button pressed Trigger-->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="borderSquare" Value="{StaticResource VeryLightGrayBrush}" />
                            <Setter Property="BorderBrush" TargetName="borderSquare" Value="{StaticResource ForegroundMainBrush}" />
                        </Trigger>

                        <!--Button disabled Trigger-->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" TargetName="borderSquare" Value="{StaticResource VeryLightGrayBrush}" />
                            <Setter Property="BorderBrush" TargetName="borderSquare" Value="{StaticResource LightGrayBrush}" />
                            <Setter Property="Opacity" TargetName="borderSquare" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>